Vagrant.configure("2") do |config|
#	config.vm.synced_folder "../../sync", "/data", type: "rsync"
	config.vm.synced_folder "../../share", "/data",
		nfs: true,
		mount_options: ['ro,actimeo=2']
	config.vm.provision "shell", path: "../common/yum.sh"
	config.vm.provision "shell", path: "../common/net.sh"
	config.vm.provision "shell", path: "../common/ssh.sh"
	config.vm.provision "shell", path: "../common/md.sh"
	config.vm.provision "shell", path: "../common/lvm.sh"
	config.vm.provision "shell", path: "../common/opensvc.sh"
	config.vm.provision "shell", path: "../common/opensvc-listener.sh"
	config.vm.provision "shell", path: "../common/user.sh"
	config.vm.provision "shell", path: "../common/alias.sh"
	config.vm.provision "shell", path: "../common/selinux.sh"
	config.vm.provision "shell", path: "../common/iscsi.sh"
	config.vm.provision "shell", path: "../common/drbd.sh"
	hosts.each do |name, desc|
		config.vm.define name do |machine|
			machine.vm.box = "centos/7"
			machine.vm.hostname = "%s" % name
			machine.vm.network :public_network,
				:dev => "br-prd",
				:mode => "bridge",
				:type => "bridge"
			machine.vm.network :public_network,
				:dev => "br-hb0",
				:mode => "bridge",
				:type => "bridge"
			machine.vm.network :public_network,
				:dev => "br-hb1",
				:mode => "bridge",
				:type => "bridge"
			machine.vm.provider "libvirt" do |v|
				v.memory = desc["memory"]
				v.storage_pool_name = "vdc"
				v.volume_cache = "writeback"
				config.vm.network "forwarded_port", guest: 22, host: desc["sshexpose"], host_ip: "192.168.99.2"
				config.vm.box_version = "1804.02"
				#v.storage :file,
				#	:device => :cdrom,
				#	:path => '/data/vdc/iso/CentOS-7-x86_64-Everything-1611.iso'
				#v.storage :file,
				#	:size => "1G",
				#	:path => "lab_%s.disk1.img" % desc["cluster"],
				#	:allow_existing => true,
				#	:shareable => true,
				#	:type => "raw",
				#	:cache => "writeback"
			end
		end
	end
end

