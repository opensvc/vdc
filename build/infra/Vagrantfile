# -*- mode: ruby -*-
# vi: set ft=ruby :

hosts = {
	  "infra-1" => {
		    "memory" => 8192,
	  },
}

Vagrant.configure("2") do |config|
#	config.vm.synced_folder "../../sync", "/data", type: "rsync"
	config.vm.synced_folder "../../share", "/data",
		nfs: true,
		mount_options: ['ro,actimeo=2']
	config.vm.provision "shell", path: "../common/yum.sh"
	config.vm.provision "shell", path: "../common/net.sh"
	config.vm.provision "shell", path: "../common/ssh.sh"
	config.vm.provision "shell", path: "../common/md.sh"
	config.vm.provision "shell", path: "../common/lvm.sh"
	config.vm.provision "shell", path: "../common/opensvc.sh"
	config.vm.provision "shell", path: "bootstrap.sh"
	hosts.each do |name, desc|
		config.vm.define name do |machine|
			machine.vm.box = "centos/7"
			machine.vm.hostname = "%s.vdc.opensvc.com" % name
			machine.vm.network :public_network,
				:dev => "br-prd",
				:mode => "bridge",
				:type => "bridge"
			machine.vm.network :public_network,
				:dev => "br-hb0",
				:mode => "bridge",
				:type => "bridge"
			machine.vm.network :public_network,
				:dev => "br-hb1",
				:mode => "bridge",
				:type => "bridge"
			machine.vm.provider "libvirt" do |v|
				v.memory = desc["memory"]
				v.storage_pool_name = "vdc"
				v.volume_cache = "writeback"
				v.storage :file,
					:size => "20G",
					:path => "infra.disk1.img",
					:allow_existing => true,
					:shareable => true,
					:type => "raw",
					:cache => "writeback"
				v.storage :file,
					:size => "20G",
					:path => "infra.disk2.img",
					:allow_existing => true,
					:shareable => true,
					:type => "raw",
					:cache => "writeback"
				v.storage :file,
					:size => "20G",
					:path => "infra.disk3.img",
					:allow_existing => true,
					:shareable => true,
					:type => "raw",
					:cache => "writeback"
				v.storage :file,
					:size => "100G",
					:path => "infra.disk4.img",
					:allow_existing => true,
					:shareable => true,
					:type => "raw",
					:cache => "writeback"
			end
		end
	end
end

